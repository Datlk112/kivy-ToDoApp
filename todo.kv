MDScreen:
    MDBottomNavigation:
        selected_color_background: (0.8, 0.8, 0.8, 0.5)
        text_color_active: 0, 0, 0, 1
        panel_color: (0.8, 0.8, 0.8, 0.5)
        font_name: "assets/fonts/Itim-Regular.ttf"
        MDBottomNavigationItem:
            text: 'To Do'
            icon: 'table-large'
            MDFloatLayout:
                id: table_holder
                MDSegmentedControl:
                    pos_hint: {"center_x": .5, "center_y": .9}
                    on_active: app.segment_control(*args)
                    MDSegmentedControlItem:
                        text: "All tasks"

                    MDSegmentedControlItem:
                        text: "Completed tasks"
                        


        MDBottomNavigationItem:
            name: 'Dashboard'
            text: 'Dashboard'
            icon: 'view-dashboard-edit-outline'

            
            MDBoxLayout:
                orientation: "vertical"
                
                MDTopAppBar:
                    size_hint_max_y:'50dp'
                    # size_hint_y: None
                    # height: self.texture_size[1] 
                    title: "Dashboard"
                    md_bg_color:get_color_from_hex("273854")
                MDRelativeLayout:
                    id:scrollDash


        MDBottomNavigationItem:
            name: 'screen 3'
            text: 'Data Table'
            icon: 'twitter'
            MDLabel:
                text: 'Screen 2'
                halign: 'center'




<DialogContent>:
    orientation: "vertical"
    spacing: "12dp"
    size_hint_y: None
    height: "200dp"

    MDTextField:
        id: title
        hint_text: "Title"
        color_mode: 'custom'
        theme_text_color: "Custom"
        mode:"rectangle"
        active_line:False
        line_color_normal: get_color_from_hex("4b5f80")
        radius: [15, 15, 15, 15]
        line_color_focus: get_color_from_hex("4b5f80")
        fill_color_normal: 1,1,1,0
        text_color_focus:0,0,0,1
        text_color_normal:get_color_from_hex("4b5f80")
        hint_text_color_focus:0,0,0,1
        multiline: False
        text:""
        canvas.before:
            Color:
                rgb:self.line_color_focus
            Line: 
                width: 1.2
                rounded_rectangle: self.x,self.y,self.width,self.height,15,15,15,15,100
    MDTextField:
        id: description
        hint_text: "Description"
        color_mode: 'custom'
        theme_text_color: "Custom"
        mode:"rectangle"
        active_line:False
        line_color_normal: get_color_from_hex("4b5f80")
        radius: [15, 15, 15, 15]
        line_color_focus: get_color_from_hex("4b5f80")
        fill_color_normal: 1,1,1,0
        text_color_focus:0,0,0,1
        text_color_normal:get_color_from_hex("4b5f80")
        hint_text_color_focus:0,0,0,1
        multiline: True
        text:""
        canvas.before:
            Color:
                rgb:self.line_color_focus
            Line: 
                width: 1.2
                rounded_rectangle: self.x,self.y,self.width,self.height,15,15,15,15,100
    MDTextField:
        id: Date
        hint_text: "Due Date"
        color_mode: 'custom'
        theme_text_color: "Custom"
        mode:"rectangle"
        active_line:False
        line_color_normal: get_color_from_hex("4b5f80")
        radius: [15, 15, 15, 15]
        line_color_focus: get_color_from_hex("4b5f80")
        fill_color_normal: 1,1,1,0
        text_color_focus:0,0,0,1
        text_color_normal:get_color_from_hex("4b5f80")
        hint_text_color_focus:0,0,0,1
        multiline: False
        helper_text: "yyyy/mm/dd"
        text:""
        canvas.before:
            Color:
                rgb:self.line_color_focus
            Line: 
                width: 1.2
                rounded_rectangle: self.x,self.y,self.width,self.height,15,15,15,15,100

    MDIconButton:
        icon: "calendar-clock"
        pos: Date.width - self.width + dp(130), Date.center_y - dp(25)
        theme_text_color: "Custom"
        icon_color: get_color_from_hex("4b5f80")
        on_release:
            app.show_calendar()
        


